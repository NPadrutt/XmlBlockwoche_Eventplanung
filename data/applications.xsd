<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="applications">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="application" minOccurs="1" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>

        <xs:unique name="applicationId">
                <xs:selector xpath="application"/>
                <xs:field xpath="@id"/>
        </xs:unique>
    </xs:element>

    <xs:element name="application">
        <xs:complexType>
            <xs:sequence>			
                <xs:element name="status" type="applicationType"/>
                <xs:element name="amount_night_stays" type="xs:integer"/>
                <xs:element name="prepaied" type="xs:boolean"/>
                <xs:element name="participant-ref" type="xs:integer"/>
                <xs:element name="event-ref" type="xs:integer"/>
            </xs:sequence>            		
            <xs:attribute name="id" type="xs:integer" use="required" />
        </xs:complexType>
    </xs:element>
    
    <xs:simpleType name="applicationType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="Angemeldet"/>
            <xs:enumeration value="Bestï¿½tigt"/>
            <xs:enumeration value="Abgemeldet"/>
        </xs:restriction>
    </xs:simpleType>
</xs:schema>